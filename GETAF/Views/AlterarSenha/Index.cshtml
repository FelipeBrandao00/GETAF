
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="./css/AlterarSenha/Index.css">
    <title>Redefinir Senha</title>
</head>
<body>
    <div class="container">
        <div class="logo">
            <img alt="Logo">
        </div>
        <h2>Redefinir senha</h2>
        <p>Digite abaixo sua nova senha.</p>
        <div class="form">
            <input type="password" id="nova-senha" placeholder="Nova senha">
            <input type="password" id="confirmar-senha" placeholder="Confirmar nova senha">
        </div>
        <div class="botao-container">
            <button class="confirmar" id="confirmar" onclick="window.location.href='./login.html'">Confirmar</button>
            <a href="./login.html" class="cancelar">Cancelar</a>
        </div>
    </div>
</body>
</html>
