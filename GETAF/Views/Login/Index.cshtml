@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Login/Index.css">
    <title>Tela Login</title>
</head>
<body>
    <div class="container">
        <div class="logo">
            <img src="https://www.freepnglogos.com/uploads/business-logo-png/business-logo-png-vector-30.png" alt="Logo">
        </div>
        <h2 class="login">Entrar</h2>
        <form>
            <div class="form-group">
                <label for="email">E-mail:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="password">Senha:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="forgot-password">
                <a href="#">Esqueci minha senha</a>
            </div>
            <div class="form">
                <button class="submit" type="submit" onclick="Login()">Entrar</button>
            </div>
        </form>
        <div class="account">
            <a>Não possui uma conta?</a>
        </div>
        <div class="create-account">
            <a href="#">Cadastre-se</a>
        </div>
    </div>
</body>
</html>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    function Login() {
        event.preventDefault();

        var email = document.getElementById('email').value;
        if (email.length == 0) {
            alert('O email não foi escrito!');
            email.focus();
            return;
        }

        var password = document.getElementById('password').value;
        if (password.length == 0) {
            alert('A senha não foi escrita!');
            password.focus();
            return;
        }

        $.ajax({
            url: '@Url.Action("ValidarLogin", "Login")',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            type: "POST",
            data: JSON.stringify({
                Email: email,
                Password: password
            }),
            success: function(retorno) {
                if (retorno.sucesso) {
                    alert('Login correto.');
                    return;
                }
                console.log(retorno);
                alert('Não foi possível realizar o login. Mensagem: ' + retorno.mensagem);
                return;
            }, 
            error: function () {
                alert('Algo deu errado ao fazer o login.');
                return;
            }
        });
    }
</script>