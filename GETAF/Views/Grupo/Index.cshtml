
@{
    ViewData["Title"] = "Grupos";
    Layout = "_LayoutTopMenu";
}

<style>
    .grupos {
        font-size: 30px;
        margin-top: 10px;
        color: #155967;
        text-align: center;
    }


    .create-group {
        text-align: left; /* Alinha o conteúdo à esquerda */
        margin: 20px 100px;
    }

        .create-group a {
            color: #575757;
            font-size: 1.2em;
            text-decoration: none;
            display: inline-block;
            margin: 0; /* Remove a margem padrão */
        }

    .groups-section {
        margin-top: 40px;
    }

        .groups-section h2 {
            color: #155967;
            font-size: 1.5em;
            text-align: center;
        }

    .group-list {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
        padding: 30px;
    }

    .group {
        background-color: #559da8;
        padding: 20px;
        border-radius: 10px;
        color: white;
        width: 300px;
        text-align: center;
        cursor: pointer;
        font-size: 1.2em;
    }

        .group:hover {
            background-color: #66a3b1;
            color: white;
        }

    .titulo-novo-grupo {
        color: #155967;
        text-align: center;
    }

    .groupInputModal {
        width: 100%;
        max-width: 250px;
        margin: 10px 0;
        padding: 12px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 6px;
    }

    #criar {
        background-color: #80c8d8;
        color: white;
        font-size: 18px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
        width: 150px;
        padding: 10px 20px;
        margin-bottom: 10px;
    }

        #criar:hover {
            background-color: #559da8;
        }

    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 48
    }

    /* modal */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 300px;
        text-align: center;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
</style>

<div class="content">
    <h1 class="grupos">Grupos</h1>
    <div class="create-group">
        <a href="#" onclick="showCreateGroupModal()">+ Criar grupo</a>
    </div>
    <div class="groups-section" id="ListaGrupos">
        
    </div>
</div>

<div id="createGroupModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeCreateGroupModal()">&times;</span>
        <h2 class="titulo-novo-grupo">Criar Novo Grupo</h2>
        <input type="text" class="groupInputModal" id="groupName" placeholder="Nome do grupo" required>
        <input type="text" class="groupInputModal" id="groupDesc" placeholder="Descrição do grupo">
        <button id=criar onclick="createGroup()">Criar grupo</button>
    </div>
</div>

<script>

    function showCreateGroupModal() {
        document.getElementById("createGroupModal").style.display = "block";
    }

    function closeCreateGroupModal() {
        document.getElementById("createGroupModal").style.display = "none";
    }

    function EntrarNoGrupo(grupoId) {
        window.location.href = `@Url.Action("DetalhesGrupo", "Grupo")?grupoId=` + grupoId;
    }

    function createGroup() {
        var nome = document.getElementById("groupName").value;
        var descricao = document.getElementById("groupDesc").value;

        $.ajax({
            url: '@Url.Action("CriarGrupo", "Grupo")',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            type: "POST",
            data: JSON.stringify({
                nome: nome,
                descricao: descricao
            }),
            success: function (retorno) {
                if (retorno.sucesso) {
                    closeCreateGroupModal();
                    ListarGrupos();
                }
                else alert(retorno.mensagem)

            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert('Algo deu errado');
            }
        });
    }

    // Fechar modal ao clicar fora dele
    window.onclick = function (event) {
        const modal = document.getElementById("createGroupModal");
        if (event.target == modal) {
            closeCreateGroupModal();
        }
    };

    function toggleUserMenu() {
        var menu = document.getElementById('user-menu');
        menu.classList.toggle('show');
    }

    function ListarGrupos() {
        $.ajax({
            url: '@Url.Action("ListarGrupos", "Grupo")',
            contentType: "application/json; charset=utf-8",
            type: "POST",
            success: function (data) {
                document.getElementById("ListaGrupos").innerHTML = data;
            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert('Algo deu errado');
            }
        });
    }

    window.onload = function () {
        ListarGrupos();
    };
</script>