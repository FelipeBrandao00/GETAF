@model List<GETAF.Models.Entities.Quiz>

<h2>Quizzes Abertos Para criar perguntas</h2>
<div class="group-list">
    @foreach (var quiz in Model) {
        <div class="group" onclick="window.location.href = '@Url.Action("Index", "Pergunta")?quizId=@quiz.Id'">
            @quiz.Titulo
            <div style="display: flex; justify-content: right; gap: 10px;">
                <button class="material-symbols-outlined"
                        style="background-color: transparent; border: none;color: white; cursor: pointer;"
                        onclick="event.stopPropagation(); showEditQuizModal(@quiz.Id, '@quiz.Titulo','@quiz.Descricao')">
                    edit
                </button>
                <button class="material-symbols-outlined deleteQuizButton"
                        style="background-color: transparent; border: none;color: white; cursor: pointer;"
                        onclick="event.stopPropagation(); openExcluirQuizModal(@quiz.Id, '@quiz.Titulo','@quiz.Descricao')">
                    delete
                </button>
            </div>
        </div>
    }
</div>